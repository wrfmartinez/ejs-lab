<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
  <%- include('./partials/nav.ejs') %>
  <h1>Full Menu</h1>
  <ul>
  <% menu.forEach(option => { %>
    <li>
      <p><%= option.name %></p>
      <ul>
        <li>Price: <%= option.price %></li>
        <li>Rating: <%= option.rating %></li>
        <li>Description: <%= option.details %></li>
      </ul>
    </li>
  <% }) %>
  </ul>
</body>
</html>
